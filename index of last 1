#User function Template for python3

class Solution:
    def lastIndex(self, s):
        # code here
        search = '1'
        if search not in s:
            return -1
        else:
            l = []
            for i,c in enumerate(s):
                if(c==search):
                   l.append(i)
            return l[-1]
                
        
        


#{ 
#  Driver Code Starts
#Initial Template for Python 3


def main():

    T = int(input())

    while(T > 0):
    	s = input()
    	ob = Solution()
    	print(ob.lastIndex(s))
    	
    	T -= 1


if __name__ == "__main__":
    main()

# } Driver Code Ends
